<div class="page-header">
  <h1 id="tables"><%= @mailform.organization.name %></h1>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="pull-left">
      <p>
      <%= link_to organization_mailforms_path(@organization), class: "btn-round btn-back" do %>
        <span class="glyphicon glyphicon-arrow-left"></span>
      <% end %>
      </p>
    </div>
    <div class="pull-right">
      <p>
        <%= link_to 'メール送信', "/mailforms/#{@mailform.id}/sendmail", class:"btn btn-danger", data: {confirm: "メール送信しますか？"} %>
      </p>
    </div>
  </div>
</div>

<div class="row mailform">
  <div class="form-group">
    <label class="col-sm-2 control-label">件名:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= hbr @mailform.subject %></p>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">To:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= hbr @mailform.to %></p>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">From:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @mailform.sender %></p>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">本文:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= hbr @mailform.body %></p>
    </div>
  </div>

  <div class="form-group">
    <label class="col-sm-2 control-label">ランディングページ:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= @mailform.landing_page %></p>
    </div>
  </div>

</div>

<div class="row">
  <div class="col-lg-12">
    <div class="pull-left">
      <p>
      <%= link_to '編集', edit_mailform_path(@mailform), class:"btn btn-success" %>
      <%= link_to '結果', "/mailforms/#{@mailform.id}/results", class:"btn btn-info" %>
      </p>
    </div>
  </div>
</div>

