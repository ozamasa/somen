        <span class="glyphicon glyphicon-arrow-left"></span>
      <% end %>
      </p>
    </div>
  </div>
</div>

<div class="row mailform">
  <div class="form-group">
    <label class="col-sm-2 control-label">名前:</label>
    <div class="col-sm-10">
      <p class="form-control-static"><%= f.text_field :name, class:"form-control", style: 'width:100%;' %></p>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-lg-12">
    <div class="pull-left">
      <p>
      <%= f.submit class:"btn btn-success" %>
      </p>
    </div>
  </div>
</div>
<% end %>
